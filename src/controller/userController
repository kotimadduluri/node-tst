const mongoose = require('mongoose');
const asyncHandler = require("express-async-handler");
const { validateUserProfile } = require("../middleware/validator");

const { User, validate } = require("../models/userModel");


// get User details.
exports.get_user = asyncHandler(async (request, response, next) => {
    try {
        const user = await User.findById(request.user._id).select("-password -__v");
        console.log(user)
        response.status(200).json(user);
    } catch (error) {
        response.status(500).json({ message: error.message })
    }

});

// create User details.
exports.create_user = asyncHandler(async (request, response, next) => {
    try {
        const { error } = validate(request.body);
        if (error) return response.status(400).send(error.details[0].message);

        const user = new User(request.body);
        await user.save();
        response.send(user);
    } catch (error) {
        console.log(error);
        res.send("An error occured");
    }

});